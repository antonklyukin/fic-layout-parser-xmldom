{
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": ["prettier", "jest"],
  "extends": ["prettier", "eslint:recommended"],
  "overrides": [
    {
      "files": ["test/**"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/all"],
      "rules": { "indent": ["error", 2] }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  }
}
